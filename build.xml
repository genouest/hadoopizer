<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project hadoopizer with libraries in sub-folder">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">
        <jar destfile="/udd/abretaud/hadoopizer_latest.jar">
            <manifest>
                <attribute name="Main-Class" value="org.genouest.hadoopizer.Hadoopizer"/>
                <attribute name="Class-Path" value=". hadoopizer_latest_lib/*.jar hadoopizer_latest_lib/endorsed/*.jar"/>
            </manifest>
            <fileset dir="/udd/abretaud/workspace/hadoopizer/bin"/>
            <fileset dir="/udd/abretaud/workspace/hadoopizer" includes="resources/*"/>
            <metainf dir="/udd/abretaud/workspace/hadoopizer/META-INF"/>
        </jar>
        <delete dir="/udd/abretaud/hadoopizer_latest_lib"/>
        <mkdir dir="/udd/abretaud/hadoopizer_latest_lib"/>
        <copy file="/udd/abretaud/workspace/hadoopizer/lib/hadoop-core-1.0.2.jar" todir="/udd/abretaud/hadoopizer_latest_lib"/>
        <copy file="/udd/abretaud/workspace/hadoopizer/lib/commons-logging-1.1.1.jar" todir="/udd/abretaud/hadoopizer_latest_lib"/>
        <copy file="/udd/abretaud/workspace/hadoopizer/lib/commons-configuration-1.6.jar" todir="/udd/abretaud/hadoopizer_latest_lib"/>
        <copy file="/udd/abretaud/workspace/hadoopizer/lib/commons-lang-2.4.jar" todir="/udd/abretaud/hadoopizer_latest_lib"/>
        <copy file="/udd/abretaud/workspace/hadoopizer/lib/jackson-core-asl-1.8.8.jar" todir="/udd/abretaud/hadoopizer_latest_lib"/>
        <copy file="/udd/abretaud/workspace/hadoopizer/lib/jackson-mapper-asl-1.8.8.jar" todir="/udd/abretaud/hadoopizer_latest_lib"/>
        <copy file="/udd/abretaud/workspace/hadoopizer/lib/common-codec.jar" todir="/udd/abretaud/hadoopizer_latest_lib"/>
        <copy file="/udd/abretaud/workspace/hadoopizer/lib/common-compress.jar" todir="/udd/abretaud/hadoopizer_latest_lib"/>
        <copy file="/udd/abretaud/workspace/hadoopizer/lib/commons-cli.jar" todir="/udd/abretaud/hadoopizer_latest_lib"/>
        <copy todir="/udd/abretaud/hadoopizer_latest_lib">
        	  <fileset dir="/udd/abretaud/workspace/hadoopizer/lib" includes="endorsed/*"/>
        </copy>
    </target>
</project>
