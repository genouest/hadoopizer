<?xml version="1.0" encoding="utf-8"?>
<job>
    <command>
        blastp -query ${q} -db ${db} -out ${res}
    </command>
    
    <input id="paired" splitter="fastq_paired">
        <url>/local/foo/bar/myfile1.fastq</url>
        <url>/local/foo/bar/myfile2.fastq</url>
    </input>

    <input id="db">
        <url autocomplete="true">/local/foo/bar/myfile</url>
    </input>
    
    <outputs>
        <compressor>gzip</compressor>
        <url>/local/foo/bar</url>
        <output id="res" reducer="blast" />
    </outputs>
    
    <hadoop>
        <config key="mapred.child.java.opts">-Xmx1024m</config>
    </hadoop>
</job>